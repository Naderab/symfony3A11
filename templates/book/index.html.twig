{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
  <a href="{{path('app_book_add')}}">Add Book</a>
<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Publication Date</th>
    <th>Enabled</th>
  </tr>
  {% for a in books %}
    <tr>
      <td>{{a.id}}</td>
      <td>{{a.title}}</td>
      <td>{{a.publicationDate | date}}</td>
      <td>{{a.enabled}}</td>

      <td>
           <a href="{{path('app_book_update',{id:a.id})}}">
          Update</a>
      </td>
      <td>
        <a href="{{path('app_book_delete',{id:a.id})}}">Remove</a>
      </td>

    </tr>
  {% endfor %}
</table>
</div>
{% endblock %}
